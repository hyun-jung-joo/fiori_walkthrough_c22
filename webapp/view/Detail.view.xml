<mvc:View
    controllerName="ui5.walkthrough_c22.controller.Detail"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <!-- Detail 화면 -->
    <!-- showNavButton 을 true로 하면 뒤로가기 버튼이 생기고, 눌렀을 때의 대한 이벤트를 설정해준다. -->
    <Page
        title="{i18n>detailPageTitle}"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <!-- 클릭한 invoice에 해당하는 필드 값들을 사용하기  -->
        <ObjectHeader
            intro="{invoice>ShipperName}"
            title="{invoice>ProductName}"
        />
    </Page>
</mvc:View>
