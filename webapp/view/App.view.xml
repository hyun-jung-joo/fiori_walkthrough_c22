<mvc:View 
    controllerName="ui5.walkthrough_c22.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Button 
        text="Say Hello"
        press=".onShowHello"></Button>
    <Input value="{/recipient/name}"
            description="Hello {/recipient/name}"
            valueLiveUpdate="true"
            width="60%"></Input>
</mvc:View>

<!-- App.controller.js에서 지정했던 JSONModel을 
    현재 뷰에서 사용하는 방법 !! 경로가 정말 중요합니다~~ 
    valueLiveUpdate 를 통해 실시간 변경 기능을 추가 -->